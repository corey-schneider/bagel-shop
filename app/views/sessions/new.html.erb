<p id="alert"><%= alert %></p>
<br>
<h1>Login</h1>
<br>
<body class="text-center">
   <% if !current_user %>
       <%= form_tag sessions_path, class: "form-signin" do |form| %>
           <div class="field">
              <!--<%= label_tag :email %>-->
              <%= email_field_tag 'email', nil, placeholder: 'Email address', class: 'form-control', autofocus: '' %>
           </div>
           <br>
           <div class="field">
              <!--<%= label_tag :password %>-->
              <%= password_field_tag 'password', nil, placeholder: "Password", class: 'form-control' %>
           </div>
           <br><br>
           <%= recaptcha_tags %>
           <br><br>
           <div class="actions">
              <%= submit_tag 'Login', class: "btn btn-lg btn-primary btn-block" %>
           </div>
       <% end %>
   <% else %>
       <p>You are already signed in!</p>
   <% end %>
</body>

